SET(MODULE_NAME Capu)

SET( ${MODULE_NAME}_FOUND FALSE )

FIND_PATH(${MODULE_NAME}_INCLUDE_DIRS capu/Config.h
    @CMAKE_INSTALL_PREFIX@/@PROJECT_INSTALL_HEADER@
)

FIND_LIBRARY(${MODULE_NAME}_LIBRARY
    NAMES Capu
    PATHS @CMAKE_INSTALL_PREFIX@/@PROJECT_INSTALL_STATIC_LIB@
)

SET(${MODULE_NAME}_FOUND FALSE)

IF(${MODULE_NAME}_LIBRARY)
    SET( ${MODULE_NAME}_LIBRARIES ${${MODULE_NAME}_LIBRARY} )
    SET( ${MODULE_NAME}_FOUND TRUE )
    message(STATUS "Found ${MODULE_NAME} libs: ${${MODULE_NAME}_LIBRARIES}")
    message(STATUS "Found ${MODULE_NAME} includes: ${${MODULE_NAME}_INCLUDE_DIRS}")
ENDIF(${MODULE_NAME}_LIBRARY)

MARK_AS_ADVANCED(
    ${MODULE_NAME}_INCLUDE_DIRS
    ${MODULE_NAME}_LIBRARIES
    ${MODULE_NAME}_FOUND
)
