INCLUDE(FindPackageHandleStandardArgs)
SET(Capu_VERSION @Capu_VERSION@)

@PACKAGE_INIT@

FIND_PATH(Capu_INCLUDE_DIR capu/Config.h
    @PACKAGE_PROJECT_INSTALL_HEADER@
)

FIND_LIBRARY(Capu_LIBRARY
    NAMES Capu
    PATHS @PACKAGE_PROJECT_INSTALL_STATIC_LIB@
)

FIND_PACKAGE_HANDLE_STANDARD_ARGS(Capu
  FOUND_VAR Capu_FOUND
  REQUIRED_VARS Capu_INCLUDE_DIR Capu_LIBRARY
  VERSION_VAR Capu_VERSION
)

SET(Capu_INCLUDE_DIRS ${Capu_INCLUDE_DIR})
SET(Capu_LIBRARIES ${Capu_LIBRARY})

message(STATUS "Found Capu libs: ${Capu_LIBRARIES}")
message(STATUS "Found Capu includes: ${Capu_INCLUDE_DIRS}")

MARK_AS_ADVANCED(
    Capu_INCLUDE_DIRS
    Capu_LIBRARIES
    Capu_FOUND
)
